    //        if ($("#csharpTextInput").text == "dog") {
    //            $("#csharpTextInput").addClass("green")
    //        }
    //    })
    //})

    $('#csharpTextInput').on('input', function (e) {
        if (palindrome($("#csharpTextInput").val()) == true) {
            $("#csharpTextInput").removeClass("redBackGround")
            $("#csharpTextInput").addClass("greenBackGround")
        }
        else {
            $("#csharpTextInput").removeClass("greenBackGround")
            $("#csharpTextInput").addClass("redBackGround")
        }

    });


    function palindrome(str) {

        var lowRegStr = str.toLowerCase().replaceAll(' ', '');

        var reverseStr = lowRegStr.split('').reverse().join('');
        console.log(lowRegStr)
        console.log(reverseStr)
        console.log('\n')
        return reverseStr === lowRegStr;
    }

</script>